<div class="@("screen-mask" + (this.Sending ? " active" : ""))"></div>

<ThemeProvider>

    <HeaderComponent />

    <div id="main-pane">
        <Grid Container Spacing="Skclusive.Core.Component.Spacing.Three">
            <Grid Item ExtraSmall="GridSize.Twelve" Small="GridSize.Six">
                <DescriptionComponent />
            </Grid>
            <Grid Item ExtraSmall="GridSize.Twelve" Small="GridSize.Six">
                <FormComponent OnSendingStatusChanged="@FormComponent_OnSendingStatusChanged" />
            </Grid>
        </Grid>
    </div>

    <FooterComponent />

</ThemeProvider>

@code
{
    bool Sending = false;

    void FormComponent_OnSendingStatusChanged(bool sending)
    {
        this.Sending = sending;
    }
}
